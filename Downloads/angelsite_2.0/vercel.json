{
  "version": 2,
  "cleanUrls": true,
  "functions": {
    "api/login.js": {
      "runtime": "vercel-node@latest"
    }
  },
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api/login.js" },
    { "source": "/adm", "destination": "/api/login.js" },
    { "source": "/login", "destination": "/api/login.js" },
    { "source": "/callback", "destination": "/api/login.js" },
    { "source": "/dashboard-adm", "destination": "/api/login.js" },
    { "source": "/final-log", "destination": "/api/login.js" },
    { "source": "/(.*)", "destination": "/index.html" }
  ]
}